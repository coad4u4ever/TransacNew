<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/Header"
        android:textColor="#ffff1100"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/date_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:gravity="center"
        android:text="@string/date_today"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/detail_use"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Detail of uses..."
        android:textColor="#ffffb21d"
        android:textSize="50dp" />

    <EditText
        android:id="@+id/detail_amount"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:ems="10"
        android:hint="Amount"
        android:inputType="numberDecimal"
        android:textColor="#ffff231b"
        android:textSize="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnIncome"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:layout_weight=".4"
            android:background="#ff8cff0e"
            android:text="INCOME +"
            android:textSize="50dp" />

        <Button
            android:id="@+id/btnOutcome"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:layout_weight=".4"
            android:background="#ffff84a3"
            android:text="OUTCOME -"
            android:textSize="50dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnTable"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:background="#ff67f0ff"
        android:text="Show Table"
        android:textSize="50dp" />

</LinearLayout>
